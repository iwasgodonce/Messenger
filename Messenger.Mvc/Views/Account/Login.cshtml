@using Messenger.Mvc.ViewModels.Account
@model AccountViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Авторизация - Месенджер</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Messenger.Mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <main role="main" class="d-flex justify-content-center align-items-center flex-column" style="min-height:100vh; min-width:100wh">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title text-center">Авторизация</h5>
                    <form asp-action="Login" asp-controller="Account" method="post">
                    <div class="mb-3">
                        <label asp-for="Login" class="form-label">Логин</label>
                            <input type="text" class="form-control" asp-for="Login">
                            <span asp-validation-for="Login" style="color:red"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Пароль</label>
                            <input type="password" class="form-control" asp-for="Password">
                            <span asp-validation-for="Password" style="color:red"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Войти</button>
                    <a href="~/Account/Register">Создать Аккаунт</a>
                        <div style="color:red">@ViewBag.ErrorMessage</div>
                    </form>
                </div>
            </div>
            <footer class=" footer text-muted">
                &copy; 2023 - Месенджер
            </footer>
        </main>
    </div>


    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
