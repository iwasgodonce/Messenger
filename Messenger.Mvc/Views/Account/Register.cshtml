@using Messenger.Mvc.ViewModels.Account;
@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Регистрация - Месенджер</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Messenger.Mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <main role="main" class="d-flex justify-content-center align-items-center flex-column" style="min-height:100vh; min-width:100wh">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title text-center">Регистрация</h5>
                    <form asp-action="Register" asp-controller="Account" method="post">
                        <div class="mb-3">
                            <label asp-for="Login" class="form-label">Логин</label>
                            <input type="text" class="form-control" asp-for="Login">
                            <span asp-validation-for="Login" style="color:red"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Пароль</label>
                            <input type="password" class="form-control" asp-for="Password">
                            <span asp-validation-for="Password" style="color:red"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="RepeatPassword" class="form-label">Повтор Пароля</label>
                            <input type="password" class="form-control" asp-for="RepeatPassword">
                            <span asp-validation-for="RepeatPassword" style="color:red"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Age" class="form-label">Возраст</label>
                            <input value="0" type="number" class="form-control" asp-for="Age">
                            <span asp-validation-for="Age" style="color:red"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Полное Имя</label>
                            <input type="text" class="form-control" asp-for="Name">
                            <span asp-validation-for="Name" style="color:red"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Nickname" class="form-label">Никнейм</label>
                            <input type="text" class="form-control" asp-for="Nickname">
                            <span asp-validation-for="Nickname" style="color:red"></span>
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text" asp-for="IsMale">Пол</label>
                            <select class="form-select" asp-for="IsMale">
                                <option value="true">Муж.</option>
                                <option value="false">Жен.</option>
                            </select>
                            <span asp-validation-for="IsMale" style="color:red"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Создать</button>
                    </form>
                </div>
            </div>
            <footer class=" footer text-muted">
                &copy; 2023 - Месенджер
            </footer>
        </main>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>


